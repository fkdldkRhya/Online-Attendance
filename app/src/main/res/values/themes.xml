<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Online_Attendance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_1</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorControlActivated">@color/white_3</item>
        <item name="colorControlHighlight">@color/white_4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_1</item>
        <item name="colorSecondaryVariant">@color/white_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="progressWheelColor">@color/black_2</item>
        <item name="mainWhiteAndBlackColor">@color/black</item>
        <item name="dialogBackgroundColor">@color/white</item>
        <item name="android:popupMenuStyle">@style/RoundPopupMenuStyle</item>
    </style>


    <!-- Text color -->
    <style name="customTextViewColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Tap layout Style -->
    <style name="customTabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/esamanru_light</item>
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorGravity">top</item>
        <item name="tabIndicatorColor">@color/white_2</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIconTint">@color/black</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabRippleColor">@null</item>
    </style>
    <style name="customTabLayoutStyle2" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/esamanru_light</item>
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorColor">@color/white_2</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIconTint">@color/black</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabRippleColor">@null</item>
    </style>
    <style name="customTabLayoutStyle3" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/esamanru_light</item>
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIconTint">@color/black</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabRippleColor">@null</item>
    </style>
</resources>